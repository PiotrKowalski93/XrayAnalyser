<Window x:Class="XrayPhotoAnalyser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XrayPhotoAnalyser"
        mc:Ignorable="d"
        Title="Xray Photo Analyser" 
        Height="550" 
        Width="1300"
        WindowStartupLocation="CenterScreen" Icon="/XrayPhotoAnalyser;component/Icons/Icon.jpg">
    <Grid Background="#FFA29F9F">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.6*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="0.2*"/>
            </Grid.RowDefinitions>

            <StackPanel x:Name="LoadedXrayImage" Grid.Row="0" Margin="10,10" Background="#FFBFBCBC"/>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Button x:Name="LoadImageBtn" Content="Load Image" Grid.Row="0" Height="30" Width="160" Click="LoadImageBtn_Click"/>
                <Button x:Name="SegmentImageBtn" Content="Run Segmentation" Grid.Row="1" Height="30" Width="160"/>
            </Grid>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="0.2*"/>
            </Grid.RowDefinitions>
            
            <StackPanel x:Name="SegmentedXrayImage" Grid.Row="0" Margin="10,10" Background="#FFBFBCBC"/>
        </Grid>

        <Grid Grid.Column="2">

        </Grid>

    </Grid>
</Window>
